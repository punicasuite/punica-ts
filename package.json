{
  "name": "punica-ts",
  "version": "0.2.14",
  "description": "Punica CLI - The Ontology Blockchain dApp development framework",
  "bin": {
    "punica-ts": "./lib/punica-ts.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "tslint --project ./",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/test/.*\\.test\\.(ts|tsx|js)$",
    "moduleDirectories": [
      "<rootDir>/node_modules"
    ]
  },
  "author": "Matus Zamborsky <zamborsky@gmail.com>",
  "license": "LGPL3",
  "repository": {
    "type": "git",
    "url": "git://github.com/OntologyCommunityDevelopers/punica-ts"
  },
  "bugs": {
    "url": "https://github.com/OntologyCommunityDevelopers/punica-ts/issues"
  },
  "homepage": "https://github.com/OntologyCommunityDevelopers/punica-ts",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.0.0",
    "@types/uuid": "^3.4.4",
    "babel-polyfill": "^6.26.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-no-circular-imports": "^0.4.0",
    "typescript": "^3.1.0"
  },
  "dependencies": {
    "bignumber.js": "^8.0.1",
    "commander": "^2.18.0",
    "isomorphic-git": "^0.37.3",
    "jest": "^23.4.2",
    "jest-cli": "^23.6.0",
    "ontology-ts-crypto": "^0.1.17",
    "ontology-ts-test": "^0.2.15",
    "source-map-support": "^0.5.9",
    "uuid": "^3.3.2"
  }
}
